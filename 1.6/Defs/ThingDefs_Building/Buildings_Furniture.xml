<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="ArtableFurnitureBase">
    <defName>RK_Pulpit</defName>
    <label>pulpit</label>
    <description>a small pulpit. ratkin priest can host prayer meeting in this place.</description>
    <graphicData>
      <texPath>Things/Building/Furniture/RK_Pulpit</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(1.5, 1.5)</drawSize>
    </graphicData>
    <costStuffCount>60</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
